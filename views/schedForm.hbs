<h2>Add a new schedule</h2>

<form action="/schedules/new" method="post">
  <label for="user_id">User ID:</label>
  <input type="text" id="user_id" name="user_id"><br><br>
  <label for="day">Day:</label>
  <input type="date" id="day" name="day"><br><br>
  <label for="start_at">Start time:</label>
  <input type="time" id="start_at" name="start_at"><br><br>
  <label for="end_at">End time:</label>
  <input type="time" id="end_at" name="end_at"><br><br>
  <input type="submit" value="Submit">
</form>
