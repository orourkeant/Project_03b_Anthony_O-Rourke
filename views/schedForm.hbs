<h2>Add a new schedule</h2>

<form action="/schedules/new" method="post">
  <label for="user_id">User ID:</label>
  <input type="text" id="user_id" name="user_id"><br><br>
  <label for="day">Day:</label>
  <input list="days" name="day">
  <datalist id="days">
    <option value="Monday">
    <option value="Tuesday">
    <option value="Wednesday">
    <option value="Thursday">
    <option value="Friday">
    <option value="Saturday">
    <option value="Sunday">
  </datalist><br><br>
  <label for="start_at">Start time:</label>
  <input type="text" id="start_at" name="start_at"><br><br>
  <label for="end_at">End time:</label>
  <input type="text" id="end_at" name="end_at"><br><br>
  <input type="submit" value="Submit">
</form>
